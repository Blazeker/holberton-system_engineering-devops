#!/usr/bin/env bash
# First advanced exercise
echo $$ > /var/run/holbertonscript.pid
trap "echo I hate the kill command; sudo rm -R var/run/holbertonscript.pid; exit" SIGTERM
trap "echo Y U no love me?!; exit" SIGINT
trap "sudo rm -R var/run/holbertonscript.pid; exit" SIGQUIT
while true
do
    echo "To infinity and beyond"
    sleep 2
done